{
  "name": "Market Dash",
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    },
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.22"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.go",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "bradlc.vscode-tailwindcss",
        "dbaeumer.vscode-eslint",
        "biomejs.biome",
        "esbenp.prettier-vscode",
        "formulahendry.auto-rename-tag",
        "christian-kohler.path-intellisense",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "tamasfe.even-better-toml"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome",
        "[go]": {
          "editor.defaultFormatter": "golang.go"
        },
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff"
        },
        "go.toolsManagement.autoUpdate": true,
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  },
  "forwardPorts": [3000, 8080, 8081, 8787],
  "portsAttributes": {
    "3000": { "label": "Frontend" },
    "8080": { "label": "Market Ingestor" },
    "8081": { "label": "News Analyzer" },
    "8787": { "label": "API Gateway" }
  },
  "postCreateCommand": "pnpm install && cd services/market-ingestor && go mod download && cd ../news-analyzer && pip install -e '.[dev]'",
  "remoteUser": "vscode"
}
